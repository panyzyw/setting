<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:background="@drawable/layout_selector">

    <TextView
        android:id="@+id/item_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_ic"
        android:textColor="@color/font_black"
        android:textSize="@dimen/lst_item_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/item_wifi_icon"
            android:layout_width="@dimen/setting_list_icon_width"
            android:layout_height="@dimen/setting_list_icon_height" />

        <ImageView
            android:id="@+id/item_wifi_select"
            android:layout_width="@dimen/setting_list_icon_width"
            android:layout_height="@dimen/setting_list_icon_height"
            android:layout_marginLeft="18dp"
            android:src="@drawable/select"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>

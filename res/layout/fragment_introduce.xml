<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/about_item_padding_right"
    android:paddingStart="@dimen/about_item_padding_left"
    android:paddingTop="@dimen/about_fragment_margin_top">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/contact_introduce_title"
        android:textColor="@color/introduce_title"
        android:textSize="@dimen/introduce_title_size" />

    <TextView
        android:id="@+id/introduce"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:lineSpacingExtra="8dp"
        android:text="@string/contact_introduce_text"
        android:textColor="@color/introduce_text"
        android:textSize="@dimen/introduce_text_size" />


</LinearLayout>

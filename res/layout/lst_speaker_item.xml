<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/item_speaker_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/all_item_left_text_color"
        android:textSize="@dimen/lst_item_text_size" />

    <TextView
        android:id="@+id/item_speaker_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textColor="@color/all_item_right_text_color"
        android:textSize="@dimen/lst_item_text_size" />
</LinearLayout>
